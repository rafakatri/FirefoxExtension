{
    "manifest_version": 2,
    "name": "CookieChecker",
    "version": "1.0",
    "description": "Displays browser information such as cookies and cache.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "cookies",
      "activeTab",
      "tabs",
      "storage",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  